  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "TS Debug",
      "runtimeExecutable": "/Users/Mora/.nvm/versions/node/v8.9.3/bin/node",
      "program": "${workspaceRoot}/node_modules/.bin/ts-node",
      "args": [
        "${file}"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Jest Tests",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "args": [
        "--runInBand", "${file}"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
