// Place your settings in this file to overwrite default and user settings.
{
  "jest.autoEnable": false,

  "mora-vscode.globalStyleFiles": [
    "${root}/src/style/base/common.scss"
  ],
  "dot-template.importStyleTemplate": "import './style/$rawModuleName.scss'",

  "files.exclude": {
    "coverage": true,

    /*# INJECT_START folders #*/
    "candidate": true,
    "component": true,
    "dom": true,
    "helper": true,
    "node": true,
    "style": true,
    "type": true,
    "util": true,
    "widget": true,
    /*# INJECT_END #*/
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  }
}
