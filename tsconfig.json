{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noLib": false,
    "lib": [
      "dom",
      "es5",
      "es2015.collection", // for react 16
      "es2015.promise"
    ],
    "outDir": "./",
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "exclude": [
    // "src/*/__tests__",
    // "src/*/__mocks__",

    // "src/*/*/__tests__",
    // "src/*/*/__mocks__"
  ]
}
