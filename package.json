  "scripts": {
    "build": "./script.ts exports && tsc && ./script.ts cpStyle",
    "build:watch": "./script.ts watch",
    "release": "npm version patch && npm run build && snpm publish && cnpm sync mora-common",
    "installToSkill": "npm run build && ./script.ts installTo ../skill/node_modules/mora-common",
    "test": "jest"
  },
  "author": "Mora <qiuzhongleiabc@126.com> (https://qiu8310.github.io/)",
  "license": "MIT",
  "jest": {
    "roots": [
      "src"
    ],
    "mapCoverage": true,
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/helper/"
    ],
    "coverageDirectory": "./coverage",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
